static char *lread(int MAX, char *p)
{
   int           x = MAX, y = 0, symbol = 0;
   char         *q = p;

   while (x--)
   {
      symbol = getchar();      
      if (symbol ==  EOF) break;
      if (symbol ==    0) break;
      y++;
      if (symbol == 0x0D) continue;
      if (symbol == 0x0A) break;
      *p++ = symbol;
   }

   if (y)
   {
      *p = 0;
      if (flag['e'-'a']) printf("<%s", p);
      return q;
   }

   return NULL;
}

